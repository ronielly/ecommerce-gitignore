@model IEnumerable<Ecommerce.Models.Departaments>

@{
    ViewBag.Title = "Index";
}

<h2>List of Departaments</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { }, new { @class="btn btn-primary"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.DepartamentsId }, new { @class="btn btn-warning"}) |
            @Html.ActionLink("Details", "Details", new { id=item.DepartamentsId }, new { @class = "btn btn-info" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.DepartamentsId }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
